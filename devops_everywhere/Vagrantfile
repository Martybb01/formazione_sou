# -*- mode: ruby -*-
# vi:set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"
  
  # Configurazione delle risorse della VM
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 1024  # Imposta la memoria a 1 GB
    vb.cpus = 2       # Imposta 2 CPU
  end

  # Port forwarding per il server web
  config.vm.network "forwarded_port", guest: 80, host: 8080

  config.vm.provision "shell", inline: <<-SHELL
    # Aggiorna i pacchetti e installa Nginx e jq (per elaborare JSON)
    sudo apt-get update
    sudo apt-get install -y nginx jq curl

    # Crea la directory dell'applicazione
    sudo mkdir -p /var/www/html/github-monitor

    # Copia lo script Bash esterno nella VM e rendilo eseguibile
    cp /vagrant/update_repo.sh /var/www/html/github-monitor/update_repo.sh
    sudo chmod +x /var/www/html/github-monitor/update_repo.sh

    # Esegui lo script per il primo aggiornamento
    sudo /var/www/html/github-monitor/update_repo.sh

    # Configura una cron job per aggiornare i dati ogni 5 minuti
    echo "*/5 * * * * root /var/www/html/github-monitor/update_repo.sh" | sudo tee -a /etc/crontab

    # Configura Nginx per servire la pagina HTML
    sudo ln -s /var/www/html/github-monitor/index.html /var/www/html/index.html
    sudo systemctl restart nginx
  SHELL
end
